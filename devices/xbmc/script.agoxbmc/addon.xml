<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.agoxbmc" name="AgoXBMC" version="0.1.0" provider-name="Alexey Balekhov">
    <requires>
        <import addon="xbmc.python" version="2.0"/>
    </requires>
    <extension point="xbmc.service" library="default.py"/>
    <extension point="xbmc.python.script" library="toggle_dialog.py">
    	<provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <language>en ru</language>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <summary lang="en">AgoControl integration add-on</summary>
        <summary lang="ru">Интеграция в систему AgoControl</summary>
        <description lang="en">This add-on intergrates XBMC to AgoControl system as a new device and provides opportunity to control other devices.</description>
        <description lang="ru">Это дополнение обеспечивает интеграцию XBMC в систему AgoControl в качестве нового устройства, а также предоставляет возможность управлять другими устройствами.</description>
        <disclaimer lang="en">This addon requires python-qpid.</disclaimer>
        <disclaimer lang="ru">Это дополнение зависит от python-qpid.</disclaimer>
    </extension>
</addon>